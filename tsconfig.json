{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "esModuleInterop": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "paths": {
      "@generated/*": ["src/@generated/*"],
      "modules/*": ["src/app_modules/*"],
    },
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "@generated/*", "prisma/*.ts"]
}
